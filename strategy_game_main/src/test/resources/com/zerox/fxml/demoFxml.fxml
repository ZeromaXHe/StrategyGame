<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<AnchorPane fx:id="gameAnchor" prefHeight="450" prefWidth="750.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zerox.test.DemoTest">
    <VBox spacing="10" AnchorPane.topAnchor="30.0" AnchorPane.leftAnchor="50.0">
        <HBox spacing="10">
            <Button text="start" onAction="#start"/>
            <Button text="pause" onAction="#pause"/>
            <Button text="play" onAction="#play"/>
            <TextField fx:id="textField" prefWidth="100" editable="false"/>
        </HBox>
        <HBox spacing="10">
            <Label text="fps"/>
            <TextField fx:id="fpsTextField" prefWidth="100" editable="false"/>
        </HBox>
    </VBox>
</AnchorPane>